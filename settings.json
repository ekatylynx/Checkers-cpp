// Конфиг файл для быстрой настройки параметров игры
{
    // отвечает за ширину и высоту окна игры; 0 - знач. по умолчанию
    "WindowSize": {
        "Width": 0,
        "Hight": 0
    },
    // параметры бота
    "Bot": {
        // является ли ботом белые шашки - нет
        "IsWhiteBot": false,
        // является ли ботом черные шашки - да
        "IsBlackBot": true,
        // уровень игры белых
        "WhiteBotLevel": 0,
        // уровень игры черных
        "BlackBotLevel": 5,
        // просчет состояния бота
        "BotScoringType": "NumberAndPotential",
        // задержка для хода бота
        "BotDelayMS": 0,
        // являются ли рандомными ходы бота - нет
        // по умол. они оптимальны
        "NoRandom": false,
        // принимает значение O0, O1, O2 определяет насколько сильно будут урезаны наши просчеты внутри бота // O2 самая сильная оптимизация // O0 - отсутствие оптимизации для бота
        "Optimization": "O1"
    },
    "Game": {
        // максимальное кол-во ходов до наступления ничьей
        "MaxNumTurns": 120
    }
}
